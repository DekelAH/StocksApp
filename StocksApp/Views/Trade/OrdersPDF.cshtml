@model IEnumerable<IOrderResponse>
@{
    Layout = null;
}

<link href="@("http://" + Context.Request.Host.ToString() + "/StocksStyleSheet.css")" rel="stylesheet" />

<h1>Orders</h1>
<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Date And Time</th>
            <th>Stock</th>
            <th>Order Type</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Trade Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IOrderResponse order in Model)
        {
            <tr>
                <td style="width: 15%">@order.DateAndTimeOfOrder?.ToString("dd MMMM yyyy hh:mm:ss tt")</td>
                <td style="width: 20%">@order.StockName (@order.StockSymbol)</td>
                <td style="width: 13%">@order.TypeOfOrder</td>
                <td style="width: 9%">@order.Quantity</td>
                <td style="width: 9%">@order.Price</td>
                <td style="width: 10%">@order.TradeAmount</td>
            </tr>
        }
    </tbody>
</table>